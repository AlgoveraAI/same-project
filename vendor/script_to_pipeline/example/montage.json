{
  "pipeline": {
    "name": "montage"
  },
  "description": "images + edge detection",
  "input": {
    "cross": [
      {
        "pfs": {
          "repo": "edges",
          "glob": "/"
        }
      },
      {
        "pfs": {
          "repo": "images",
          "glob": "/"
        }
      }
    ]
  },
  "transform": {
    "cmd": ["sh"],
    "image": "v4tech/imagemagick:latest",
    "stdin": [
      "montage -shadow -background SkyBlue -geometry 300x300+2+2 $(find /pfs -type f | sort) /pfs/out/montage.png"
    ]
  }
}